# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
POSTGRES_DB=discord_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme

# Service URLs (Docker internal)
DATABASE_URL=postgres://postgres:your_secure_password_here@postgres:5432/discord_bot
REDIS_URL=redis://:changeme@redis:6379
LIBRETRANSLATE_URL=http://libretranslate:5000
TTS_SERVICE_URL=http://tts-service:8000

# TTS Cache Settings
MAX_CACHE_SIZE_GB=10
CACHE_CLEANUP_HOURS=24

# Spotify API (for music bot)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Optional: YouTube API (for better search results)
YOUTUBE_API_KEY=your_youtube_api_key_here

# TTS Settings
TTS_MAX_LENGTH=500
TTS_QUEUE_SIZE=10

# Music Settings
MUSIC_MAX_QUEUE_SIZE=100
MUSIC_MAX_DURATION=3600

# Node Environment
NODE_ENV=production

# Logging
LOG_LEVEL=info
